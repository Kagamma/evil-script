e = event_create()

fn inc_1() {
  a = 1
  for i = 0 to 4 {
    writeln(a)
    a += 1
    sleep(200)
  }
  event_set(e)
}

fn inc_2() {
  event_wait(e) // Wait for inc_1() finish
  a = 100
  for i = 0 to 4 {
    writeln(a)
    a += 100
    sleep(200)
  }
}

t1 = thread_create(inc_1)
t2 = thread_create(inc_2)

thread_start(t1)
thread_start(t2)

// Wait until all the threads terminated
thread_wait(t1)
thread_wait(t2)